{
  "name": "superalgos",
  "version": "0.0.12-beta",
  "description": "Superalgos is a free, open-source crypto trading bot",
  "main": "electron-wrapper.js",
  "license": "Apache License 2.0",
  "homepage": "https://www.superalgos.org/",
  "author": {
    "name": "Luis-Fernando-Molina"
  },
  "scripts": {
    "start-dev": "node platform minMemo noBrowser",
    "setup": "node setup noShortcuts",
    "release-dev": "electron-builder --dir",
    "release-win": "electron-builder --win",
    "release-mac": "electron-builder --mac",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@octokit/rest": "^18.11.4",
    "ccxt": "^1.57.36",
    "child_process": "^1.0.2",
    "ethereumjs-common": "^1.5.2",
    "ethereumjs-tx": "^2.1.2",
    "ethers": "^5.4.7",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "ip": "^1.1.5",
    "lookpath": "^1.2.2",
    "node-fetch": "^2.6.5",
    "open": "^8.2.1",
    "path": "^0.12.7",
    "simple-git": "^2.46.0",
    "telegraf": "^4.4.2",
    "twitter": "^1.7.1",
    "util": "^0.12.4",
    "web3": "^1.6.0",
    "ws": "^8.2.3"
  },
  "devDependencies": {
    "electron": "^15.1.0",
    "electron-builder": "^22.11.7"
  },
  "build": {
    "appId": "org.superalgos.platform",
    "productName": "Superalgos",
    "directories": {
      "output": "build"
    },
    "files": [
      "**/*",
      "!.github${/*}",
      "!.vscode${/*}",
      "!.dockerignore${/*}",
      "!Data-Storage/*",
      "!Log-Files/*",
      "!My-Workspaces/*",
      "!build",
      "!Docker",
      "!Launch-Scripts",
      "!run.js",
      "!setup.js",
      "!uninstall.js"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": "x64"
        },
        {
          "target": "nsis",
          "arch": "x64"
        }
      ],
      "icon": "./Launch-Scripts/superalgos.ico",
      "publish": "github"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "./LICENSE",
      "runAfterFinish": false
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": "dmg",
      "type": "development",
      "publish": "github"
    },
    "linux": {
      "maintainer": "na.amorim@gmail.com"
    }
  }
}
