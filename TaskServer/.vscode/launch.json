    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program on Linux",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/../TaskServerRoot.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program on Windows",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\..\\TaskServerRoot.js"
        }
    ]
}
